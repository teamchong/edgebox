{
  "name": "claude-code",
  "description": "Claude Code CLI running in EdgeBox sandbox",
  "npm": "@anthropic-ai/claude-code",
  "useKeychain": true,
  "dirs": {
    "/tmp": "rwx",
    "~/.claude": "rw",
    "~/.config": "r"
  },
  "env": [
    "ANTHROPIC_API_KEY",
    "HOME",
    "PATH"
  ],
  "allowedUrls": [
    "https://api.anthropic.com/*",
    "https://statsig.anthropic.com/*"
  ],
  "allowCommands": [
    "git", "npm", "node", "bun", "curl", "cat", "ls", "mkdir", "rm", "cp", "mv",
    "grep", "find", "head", "tail", "wc", "sort", "uniq", "diff", "touch", "chmod"
  ],
  "denyCommands": [
    "sudo", "su", "passwd", "chown", "dd", "mkfs", "fdisk", "mount", "umount"
  ]
}
